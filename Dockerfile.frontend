FROM node:20-alpine as builder

WORKDIR /app

COPY package.json ./
RUN npm install

COPY . .

# Set VITE_API_BASE_URL during the build process
ENV VITE_API_BASE_URL=/api

RUN npm run build

# Copy serve.json into the dist directory
COPY serve.json ./dist/

FROM node:20-alpine

WORKDIR /app

COPY --from=builder /app/dist ./dist

EXPOSE 8080

# Correct the path to serve.json in the CMD command
CMD ["npx", "serve", "-s", "dist", "-l", "8080", "-c", "dist/serve.json"]